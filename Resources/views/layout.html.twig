<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <link rel="stylesheet" href="{{ asset('bundles/bisonlabcommon/css/standard.css') }}" type="text/css" media="all" />
        <title>{% block title %}{% endblock title %}</title>
        <link rel="shortcut icon" href="{{ asset('bundles/bisonlabcommon/images/favicon.ico') }}" />
        <script type="text/javascript" src="{{ asset('bundles/bisonlabcommon/js/jquery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/bisonlabcommon/js/jquery.tablesorter.js') }}"></script>

<script type="text/javascript">
$(document).ready(function()
    {
        $("#sortable_table").tablesorter();
    }
);
</script>

    </head>
    <body>
       {% block javascripts %}{% endblock %}
        <div id="rl-wrapper">
            <div id="rl-header">
            </div>
            <div id="rl-sidemenu">
                  <img src="{{ asset('bundles/bisonlabcommon/images/logo.png') }}" alt="Logo"><br><br>
                  {% block lsidemenu %}
                  {% endblock lsidemenu %}
                  <div id="rl_loggedin_check">
                     {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                         <small><small><b>
                         {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}  </b><br>
                         <a href="{{ path('fos_user_security_logout') }}">
                             <small><small> {{ 'layout.logout'|trans({}, 'FOSUserBundle') }} </small></small>
                         </a></small></small>
                     {% else %}
                         <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                     {% endif %}
                   </div>
            </div>
     
            <div class="rl-content">

            {% for type, flashMessages in app.session.flashbag.all() %}
                {% for flashMessage in flashMessages %}
                    <div class="flash-{{ type }}">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-notice">
                    {{ flashMessage }}
                </div>
            {% endfor %}

                {% block lcontent %}
                    {% block fos_user_content %}{% endblock fos_user_content %}
                    {% block body %}{% endblock body %}
                {% endblock lcontent %}
            </div>
        </div>
    </body>
</html>
