{% extends "BisonLabCommonBundle::base.html.twig" %}

{% block content %}

<h1>User edit</h1>

<div id="formstyle" class="myform">
<form action="{{ path('user_update', { 'id': entity.id }) }}" method="post"}}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Save</button>
    </p>
</form>
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('user') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}
